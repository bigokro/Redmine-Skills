<div id="matched_issues">
<% form_remote_tag(:update => "content", :url => { :controller => "skills_matcher", :action => :find_issues_by_filter}) do %>
	<div id="query_form_content">
    <fieldset id="filters" class="collapsible">
    	<legend onclick="toggleFieldset(this);"><%= l(:label_filter_plural) %></legend>
    	<div>
    		<%= render :partial => 'skills_matcher/filters', :locals => {:filters => @filters} %>
    	</div>
    </fieldset>
	</div>
    <p class="buttons">

    <%= submit_tag l(:button_apply), :class => 'icon icon-checked' %>
                       
    <%= link_to l(:button_clear),
                       	'#',
						:onclick => "$$('.filter input[type=checkbox]').each(function(e){ e.checked = 0 });",
                   		:class => 'icon icon-reload'  %>
                       
    </p>
<% end %>

<% if @matched_issues.nil? || @matched_issues.empty? %>
<p class="nodata"><%= l(:label_no_data) %></p>
<% else %>
<div id="issue_list">
	<%= render :partial => 'skills_matcher/list_issues', :locals => { :f => nil } %>
</div>
<p class="pagination"><!-- %= pagination_links_full @issue_pages, @issue_count % --></p>
<% end %>
</div>